<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.RegistroClienteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/app_bar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:text="DEPARTAMENTO" />

        <Spinner
            android:id="@+id/spDepartamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:text="MUNICIPIO" />

        <Spinner
            android:id="@+id/spMunicipio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etNit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:drawableStart="@drawable/ic_nit_cliente_24"
            android:drawablePadding="12dp"
            android:hint="NIT"
            android:inputType="textCapCharacters" />

        <EditText
            android:id="@+id/etCUI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:drawableStart="@drawable/ic_cliente_cui_24"
            android:drawablePadding="12dp"
            android:hint="CUI"
            android:inputType="textCapCharacters" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:drawableStart="@drawable/ic_cliente_add_24"
            android:drawablePadding="12dp"
            android:hint="Nombre"
            android:inputType="textCapCharacters" />

        <EditText
            android:id="@+id/etRazonSocial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:drawableStart="@drawable/ic_cliente_reazonsocial_24"
            android:drawablePadding="12dp"
            android:hint="Razon Social"
            android:inputType="textCapCharacters" />

        <EditText
            android:id="@+id/etDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:drawableStart="@drawable/ic_cliente_direccion_24"
            android:drawablePadding="12dp"
            android:hint="DirecciÃ³n"
            android:inputType="textCapCharacters" />

        <EditText
            android:id="@+id/etTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:drawableStart="@drawable/ic_cliente_telefono_24"
            android:drawablePadding="12dp"
            android:hint="Telefono"
            android:inputType="phone" />

        <EditText
            android:id="@+id/etCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:drawableStart="@drawable/ic_cliente_correo_24"
            android:drawablePadding="12dp"
            android:hint="Correo"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etRegion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:drawableStart="@drawable/ic_cliente_region_map_24"
            android:drawablePadding="12dp"
            android:hint="Region"
            android:inputType="textCapCharacters" />

        <EditText
            android:id="@+id/etTransporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:drawableStart="@drawable/ic_cliente_transporte_transit_24"
            android:drawablePadding="12dp"
            android:hint="Transporte"
            android:inputType="textCapCharacters" />

        <EditText
            android:id="@+id/etObservaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:drawableStart="@drawable/ic_cliente_observaciones_notes_24"
            android:drawablePadding="12dp"
            android:hint="Observaciones" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/bttnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GUARDAR"
            android:textColor="@color/primaryTextColor"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>